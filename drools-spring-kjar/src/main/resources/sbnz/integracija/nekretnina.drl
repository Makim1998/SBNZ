rule "stan zona I"
    when
        $n: Nekretnina(tip == TipNekretnine.STAN, zona == ZonaNekretnine.I, $k: kvadratura)
    then
    System.out.println("pravilo stan zona I");
	$n.setProcenjenaVrednost(1300 * $k * 1.3);
end

